@{
    Layout = "_Layout";
}

<h2>Edit Your Profile</h2>

<form method="post" action="/User/EditProfile">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="@ViewBag.name" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" value="@ViewBag.email" />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" class="form-control" name="phone" value="@ViewBag.phone" placeholder="Enter phone number" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" value="@ViewBag.address" placeholder="Enter address" />
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>
